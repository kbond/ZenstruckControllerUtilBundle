<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_controller_util.forward_listener.class">Zenstruck\ControllerUtil\EventListener\ForwardListener</parameter>
        <parameter key="zenstruck_controller_util.redirect_listener.class">Zenstruck\ControllerUtil\EventListener\RedirectListener</parameter>
        <parameter key="zenstruck_controller_util.templating_view_listener.class">Zenstruck\ControllerUtil\EventListener\TemplatingViewListener</parameter>
        <parameter key="zenstruck_controller_util.has_flashes_listener.class">Zenstruck\ControllerUtil\EventListener\HasFlashesListener</parameter>
        <parameter key="zenstruck_controller_util.param_converter_listener.class">Zenstruck\ControllerUtil\EventListener\ParamConverterListener</parameter>
    </parameters>

    <services>
        <service id="zenstruck_controller_util.forward_listener" class="%zenstruck_controller_util.forward_listener.class%">
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />
        </service>
        <service id="zenstruck_controller_util.redirect_listener" class="%zenstruck_controller_util.redirect_listener.class%">
            <argument type="service" id="router" />
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />
        </service>
        <service id="zenstruck_controller_util.templating_view_listener" class="%zenstruck_controller_util.templating_view_listener.class%">
            <argument type="service" id="templating" />
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />
        </service>
        <service id="zenstruck_controller_util.has_flashes_listener" class="%zenstruck_controller_util.has_flashes_listener.class%">
            <argument type="service" id="session.flash_bag" />
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" priority="10" />
        </service>
        <service id="zenstruck_controller_util.param_converter_listener" class="%zenstruck_controller_util.param_converter_listener.class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>
    </services>
</container>
