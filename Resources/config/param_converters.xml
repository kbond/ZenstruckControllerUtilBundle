<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_controller_util.session_param_converter.class">Zenstruck\ControllerUtil\ParamConverter\SessionParamConverter</parameter>
        <parameter key="zenstruck_controller_util.flash_bag_param_converter.class">Zenstruck\ControllerUtil\ParamConverter\FlashBagParamConverter</parameter>
        <parameter key="zenstruck_controller_util.form_factory_param_converter.class">Zenstruck\ControllerUtil\ParamConverter\FormFactoryParamConverter</parameter>
        <parameter key="zenstruck_controller_util.security_context_converter.class">Zenstruck\ControllerUtil\ParamConverter\SecurityContextParamConverter</parameter>
    </parameters>

    <services>
        <service id="zenstruck_controller_util.forward_listener" class="%zenstruck_controller_util.session_param_converter.class%" public="false">
            <tag name="zenstruck_controller_util.param_converter" />
        </service>
        <service id="zenstruck_controller_util.flash_bag_param_converter" class="%zenstruck_controller_util.flash_bag_param_converter.class%" public="false">
            <argument type="service" id="session.flash_bag" />
            <tag name="zenstruck_controller_util.param_converter" />
        </service>
        <service id="zenstruck_controller_util.form_factory_param_converter" class="%zenstruck_controller_util.form_factory_param_converter.class%" public="false">
            <argument type="service" id="form.factory" />
            <tag name="zenstruck_controller_util.param_converter" />
        </service>
        <service id="zenstruck_controller_util.security_context_converter" class="%zenstruck_controller_util.security_context_converter.class%" public="false">
            <argument type="service" id="security.context" />
            <tag name="zenstruck_controller_util.param_converter" />
        </service>
    </services>
</container>
